<div class="row">
  <div class="col-12 mt-3">
    <%= f.label :nama, '単語' %>
    <%= f.text_field :name, class: 'form-control', style: "width: 100 %" %>
  </div>
</div>
<div class="row">
  <div class="col-12 mt-3">
    <%= f.label :search_key, 'ひらがなによる頭文字（1文字）' %>
    <%= f.text_field :search_key, class: 'form-control', style: "width: 5%" %>
  </div>
</div>
<div class="row">
  <div class="col-12 mt-3">
    <%= f.label :description, '説明'  %>
    <%= f.text_area :description, 'data-provider': :summernote %>
  </div>
</div>
<div class="row">
  <div class="col-12 mt-3">
    <%= f.submit '確認画面へ', class: 'btn btn-info btn-block' %>
    <%= hidden_field_tag :user_id, current_user.id %>
  </div>
</div>