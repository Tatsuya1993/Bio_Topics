<div class="container">
  <div class="row">
     <div class="col mt-5">
     <h2 class="d-inline">単語編集</h2>
     <%= link_to '記事一覧', words_path, class: 'btn btn-outline-info d-inline float-right' %>
     </div>
  </div>
    <%= form_for @word do |f|  %>
    <div class="row">
      <div class="col-12 mt-3">
        <%= f.label :name, '単語' %>
        <%= f.text_field :name, class: 'form-control', style: "width: 100 %" %>
      </div>
    </div>
    <div class="row">
      <div class="col-12 mt-3">
        <%= f.label :description, '記事内容'  %>
        <%= f.text_area :description, 'data-provider': :summernote %>
      </div>
    </div>
    <div class="row">
      <div class="col-12 mt-3">
        <%= f.submit '確認画面へ', class: 'btn btn-info btn-block' %>
        <%= hidden_field_tag :user_id, current_user.id %>
      </div>
    </div>
    <% end %>
    </div>
  </div>
</div>