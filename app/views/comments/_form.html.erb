<%= form_with(model: [topic, comment] ) do |f| %>
 <div class="container">
   <div class="row">
     <div class="col-12">
       <%= f.text_area :content, class:"form-control mt-3"  %>
     </div>
   </div>
   <div class="row">
    <div class="col-12">
      <%= f.submit "この記事にコメントをする", class:"btn btn-primary btn-block mt-3" %>
    </div>
   </div>
 </div>
<% end %>