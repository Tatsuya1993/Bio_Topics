
<div class="container">
  <div class="row">
   <div class="col mt-5">
     <h2 class="d-inline">記事投稿</h2>
     <%= link_to '記事一覧', topics_path, class: 'btn btn-outline-info d-inline float-right' %>
   </div>
  </div>
  <div class="row">
    <div class="col mb-3 mt-3">
    <%= form_for @topic, url: {action: 'confirm'} do |f|  %>
    <!--<%#= form_for @topic do |f| %>-->
      <%= f.label :title, '投稿タイトル' %>
      <%= f.text_field :title, class: 'form-control', style: "width: 100 %" %>
    </div>
  </div>
  <div class="row">
    <div class="col mb-3">
      <div class="field">
        <%= f.label :content, '記事内容'  %>
        <%= f.text_area :content, 'data-provider': :summernote %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col mb-3">
      <%= f.submit '確認画面へ', class: 'btn btn-info btn-block' %>
      <%= hidden_field_tag :user_id, current_user.id %>
    </div>
  </div>
  <% end %>
</div>

