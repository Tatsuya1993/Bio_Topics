<div class="col-md-3 col-sm-12 mx-auto">
  <div class="iine-ranking bg-light rounded-top pb-1">
  <h5 class="text-center bg-warning rounded py-3">
    <i class="fas fa-crown">
    　注目の記事　
    </i>
    <i class="fas fa-crown"></i>
  </h5>
  <% @all_ranks.each do |topic| %>
  <div class="row topics mx-3">
    <div class="col-2 p-0">
      <%= link_to gravatar_for(topic.user, size: 50), topic.user %>
    </div>
    <div class="col-9 mr-1">
      <%= link_to topic.title, topic_path(topic.id) %>
      <% if topic.favorite_users.count > 0 %>
      <div class="d-inline">
        ❤️<%=topic.favorite_users.count %>
      </div>
      <% end %>
      <h6><%= time_ago_in_words(topic.created_at) %>前に作成</h6>
    </div>
  </div>
  <% end %>
  </div>
</div>