<header>
  <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">
    <%= link_to "BioTopics", root_path, class: "navbar-brand" %>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarsExample04" aria-controls="navbarsExample04" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarsExample04">
      <ul class="navbar-nav mr-auto">
        <li class="nav-item">
          <%= link_to '記事一覧', topics_path, class: 'nav-link mx-3' %>
        </li>
        <li class="nav-item">
          <a class="nav-link mx-3" href="#">辞書</a>
        </li>
        <li class="nav-item">
          <form class="form-inline my-2 my-md-0 ml-3 ">
            <input class="form-control" type="text" placeholder="サイト内検索" >
          </form>
        </li>
      </ul>
      <% if logged_in? %>
      <%= link_to "記事を投稿", new_topic_path, class: "btn btn-sm btn-primary ml-3" %>
      <ul class="navbar-nav">
        <div class="dropdown btn-group float-right">
          <a class="btn btn-default dropdown-toggle-menu-md-left" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <%= gravatar_for current_user, size:40 %>
          </a>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuLink">
            <%= link_to "プロフィール", current_user, class: "dropdown-item"  %>
            <%= link_to "ユーザー設定", edit_user_path(current_user), class: "dropdown-item" %>
            <%= link_to "ログアウト", logout_path, method: :delete, class: "dropdown-item"  %>
          </div>
        </div>
      </ul>
      <% else %>
        <%= link_to "ユーザー登録", new_user_path, class: "btn btn-sm btn-light my-2 mr-3 " %>
        <%= link_to "ログイン", login_path, class: "btn btn-sm btn-primary my-2 " %>
      <% end %>
    </div>
  </nav>
</header>