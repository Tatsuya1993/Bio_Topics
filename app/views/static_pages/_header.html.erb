<header>
  <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">
    <%= link_to "BioTopics", root_path, class: "navbar-brand" %>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarsExample04" aria-controls="navbarsExample04" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarsExample04">
      <ul class="navbar-nav mr-auto">
        <li class="nav-item">
          <%= link_to topics_path, class: 'nav-link my-auto' do %>
            <i class="far fa-newspaper article-icon"> 記事一覧</i>
          <% end %>
        </li>
        <li class="nav-item">
          <%= link_to words_path, class: 'nav-link my-auto' do %>
            <i class="fas fa-book book-icon h6"> 辞書</i>
          <% end %>
        </li>
        <li class="nav-item">
          <%= link_to help_path, class: 'nav-link my-auto' do %>
            <i class="far fa-question-circle question-icon"> 使い方</i>
          <% end %>
        </li>
      </ul>
      <% if logged_in? %>
  　　<ul class="navbar-nav">
    　　  <li class="nav-item">
          <%= link_to "記事を投稿", new_topic_path, class: "btn btn-sm btn-primary mb-1 mr-1" %>
        </li>
        <li class="nav-item">
          <%= link_to "辞書を作成", new_word_path, class: "btn btn-sm btn-primary mb-1 mr-1" %>
        </li>
      </ul>
      <ul class="navbar-nav">
        <div class="dropdown btn-group float-right">
          <a class="btn btn-default dropdown-toggle-menu-md-left" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <%= gravatar_for current_user, size:40 %>
          </a>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuLink">
            <%= link_to "プロフィール", current_user, class: "dropdown-item"  %>
            <%= link_to "ユーザー設定", edit_user_path(current_user), class: "dropdown-item" %>
            <%= link_to "お気に入り記事", favorites_index_path(current_user), class: "dropdown-item" %>
            <%= link_to "ログアウト", logout_path, method: :delete, class: "dropdown-item"  %>
          </div>
        </div>
      </ul>
      <% else %>
        <%= link_to "ユーザー登録", new_user_path, class: "btn btn-sm btn-light my-2 mr-3 " %>
        <%= link_to "ログイン", login_path, class: "btn btn-sm btn-primary my-2 " %>
      <% end %>
    </div>
  </nav>
</header>