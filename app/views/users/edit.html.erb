<% provide(:title, "ユーザー設定") %>
<%= render 'shared/error_messages' %>

<div class="container bg-light p-5 edit-prof">
    <div class="row">
        <div class="col-md-4">
            <div>
              <h3 class="text-center">
                  <%= @user.name %>
              </h3>
            </div>
            <div class="mt-3">
              <%= gravatar_for @user, size:80 %>
            </div>
            <div class="text-center">
              <%= link_to '画像の変更はこちら' , 'https://ja.gravatar.com/', :target=>["_blank"], class: 'btn btn-primary mt-3' %>
            </div>
        </div>
        <div class="col-md-8">
          <%= form_for(@user) do |f| %>
          <div class="row">
              <div class="col-md-3 mb-3">
                <%= f.label :name, "名前" %>
              </div>
              <div class="col-md-9 mb-3">
                <%= f.text_field :name, class: 'form-control' %>
              </div>
              <div class="col-md-3 mb-3">
                <%= f.label :email, "メール" %>
              </div>
              <div class="col-md-9 mb-3">
                <%= f.email_field :email, class: 'form-control' %>
              </div>
              <div class="col-md-3 mb-3">
                <%= f.label :password, "パスワード" %>
              </div>
              <div class="col-md-9 mb-3">
                <%= f.password_field :password, class: 'form-control' %>
              </div>
              <div class="col-md-3 mb-3">
                <%= f.label :password_confirmation, "パスワードの確認" %>
              </div>
              <div class="col-md-9 mb-3">
                <%= f.password_field :password_confirmation, class: 'form-control' %>
              </div>
              <div class="col-md-3 mb-3">
                <%= f.label :affiliation, "所属組織" %>
              </div>
              <div class="col-md-9 mb-3">
                <%= f.text_field :affiliation, class: 'form-control' %>
              </div>
              <div class="col-md-3 mb-3">
                 <%= f.label :s_introduction, "自己紹介" %>
              </div>              
              <div class="col-md-9 mb-3">
                 <%= f.text_area :s_introduction, class: 'form-control' %>
                 <%= f.submit "変更する", class: "btn btn-primary btn-block mt-3" %>
              </div>
          </div>
        <% end %>
        </div>
    </div>
</div>