<% provide(:title, @user.name) %>

<div class="container emp-profile">
    <div class="row">
        <div class="col-md-12">
            <div class="profile-img">
                <%= gravatar_for @user, size:60 %>
                <h4><%= @user.name %></h4>
                <h5><%= @user.s_introduction %></h5>
            </div>
        </div>
        <div class="col-md-12">
            <div class="profile-head">
                        <p class="proile-rating">記事投稿数：<span>8</span>いいね：<span>8</span></p>
                <ul class="nav nav-tabs" id="myTab" role="tablist">
                    <li class="nav-item">
                        <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">ユーザー情報</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile" aria-selected="false">投稿記事</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="tab-content profile-tab" id="myTabContent">
                <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                    <div class="row">
                        <div class="col-md-6">
                            <label>ニックネーム</label>
                        </div>
                        <div class="col-md-6">
                            <p><%= @user.name %></p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <label>メールアドレス</label>
                        </div>
                        <div class="col-md-6">
                            <p><%= @user.email %></p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <label>所属</label>
                        </div>
                        <div class="col-md-6">
                            <p><%= @user.affiliation %></p>
                        </div>
                    </div>
                </div>
                <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">
                    <div class="row">
                        <div class="col-md-12">
                            <% if @user.topics.any? %>
                              <h5>投稿された記事はありません。</h5>
                            <% end %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>