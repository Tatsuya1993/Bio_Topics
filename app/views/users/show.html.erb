<% provide(:title, @user.name) %>

<div class="container">
  <div class="row">
      <div class="col-md-5 ml-auto mt-3" style="border: 1px solid #000000;">
        <div class="bg-dark user_info">
          <h4 class="text-white text-center">ユーザー情報</h4>
        </div>
          <%= gravatar_for @user, size:60, class:"float-center" %>
          <h6 class="text-center alert-info mt-3 mx-3 rounded-pill">ニックネーム:<%= @user.name %></h4>
          <h6 class="text-center alert-info mt-3 mx-3 rounded-pill">所属：<%= @user.affiliation %></h6>
          <p class="text-center"><%= @user.s_introduction %></p>
      </div>
      <div class="col-md-5 ml-auto mt-3" style="border: 1px solid #000000;">
        <div class="bg-dark topics_info">
          <h4 class="text-white text-center">投稿記事情報</h4>
        </div>
        <h6 class="text-center">記事投稿：<%= @user.topics.count %></h4>
        <h6 class="text-center">いいね　：</h4>
      </div>
  </div>
  <div class="row">
    <div class="col-md-12 mt-3">
        <% if @user.topics.any? %>
            <%= will_paginate @topics, renderer: WillPaginate::ActionView::Bootstrap4LinkRenderer %>
          <ol>
            <%= render @topics %>
          </ol>
            <%= will_paginate @topics, renderer: WillPaginate::ActionView::Bootstrap4LinkRenderer %>
        <% else %>
          <h5>投稿された記事はありません。</h5>
        <% end %>
　　</div>
  </div>
</div>